<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/film_linear"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/Film_Image"
        android:layout_width="60dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        android:padding="7dp"
        android:weightSum="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Film_Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新木乃伊"
                android:textColor="#000000"
                android:textStyle="bold" />
        </LinearLayout>

        <TextView
            android:id="@+id/Film_Content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="“木乃伊大闹伦敦阿汤哥迎战"
            android:textColor="#FD9820"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Film_Time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="6月9日上映" />

        <TextView
            android:id="@+id/Film_Release"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_weight="1"
            android:text="今日158家影院上映2513场" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="6dp">

            <ImageView
                android:id="@+id/Image_3D"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:src="@mipmap/is3d" />

            <ImageView
                android:id="@+id/Image_MAX"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/ismax" />

            <ImageView
                android:id="@+id/Image_Big"
                android:layout_width="20dp"
                android:layout_height="25dp"
                android:layout_marginLeft="2dp"
                android:src="@mipmap/isbig" />

            <Button
                android:id="@+id/Film_Btn_Buy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="购票"
                android:textSize="10dp" />

            <Button
                android:id="@+id/Film_Btn_Detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="查看详情"
                android:textSize="10dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>